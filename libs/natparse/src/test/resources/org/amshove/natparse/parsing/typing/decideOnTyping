DEFINE DATA LOCAL
1 #B-10 (B10)
1 #A-10 (A10)
1 #N-10 (N10)
END-DEFINE

DECIDE ON FIRST VALUE OF #A-10

    VALUE 5 /* !{D:ERROR:NPP037}
    IGNORE

    VALUE TRUE /* !{D:ERROR:NPP037}
    IGNORE

    VALUE FALSE /* !{D:ERROR:NPP037}
    IGNORE

    NONE
    IGNORE
END-DECIDE

DECIDE ON FIRST VALUE OF #N-10

    VALUE 5
    IGNORE

    VALUE 500
    IGNORE

    VALUE 'Hi' /* !{D:ERROR:NPP037}
    IGNORE

    VALUE TRUE /* !{D:ERROR:NPP037}
    IGNORE

    VALUE FALSE /* !{D:ERROR:NPP037}
    IGNORE

    NONE
    IGNORE
END-DECIDE

DECIDE ON FIRST VALUE OF #B-10
    VALUE 5
    IGNORE
    VALUE 'Hi'
    IGNORE
    NONE
    IGNORE
END-DECIDE

END
